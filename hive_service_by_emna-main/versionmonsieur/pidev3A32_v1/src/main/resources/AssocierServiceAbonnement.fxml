<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.emmapi.controllers.AssocierServiceAbonnementController">

    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Associer un Service à un Abonnement" font="$x1">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <!-- Formulaire pour associer un service à un abonnement -->
        <TextField fx:id="idServiceField" layoutX="20.0" layoutY="60.0" promptText="ID du service" />
        <TextField fx:id="idAbonnementField" layoutX="20.0" layoutY="100.0" promptText="ID de l'abonnement" />

        <Button layoutX="20.0" layoutY="140.0" text="Associer" onAction="#associerServiceAbonnement" />
    </children>
</AnchorPane>